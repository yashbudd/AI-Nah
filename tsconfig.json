{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022", "DOM"],
      "module": "ESNext",
      "moduleResolution": "Bundler",
      "jsx": "react-jsx",
      "strict": true,
      "noEmit": true,
  
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      },
  
      "types": ["node"]
    },
    "include": [
      "next-env.d.ts",
      "src/**/*.ts",
      "src/**/*.tsx",
      ".next/types/**/*.ts"
    ],
    "exclude": ["node_modules"]
  }  