{
  "compilerOptions": {
    "target": "ES6", // Specify ECMAScript target version
    "module": "commonjs", // Specify module code generation
    "strict": true, // Enable strict type-checking options
    "esModuleInterop": true, // Enable compatibility with ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "resolveJsonModule": true, // Allow importing .json files
    "outDir": "./dist", // Specify output directory for compiled files
    "typeRoots": ["./node_modules/@types"], // Specify type definitions directory
    "baseUrl": "./", // Base directory for module resolution
    "paths": {
      "@/*": ["src/*"] // Alias for the src directory
    },
    "experimentalDecorators": true // Enable experimental decorator support
  },
  "include": [
    "src/**/*" // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules" // Exclude dependencies
  ]
}